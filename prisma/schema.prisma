generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int   @unique @id @default(autoincrement())
  email     String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wallets   Wallet[]
}

model Wallet {
  id        Int   @unique @id @default(autoincrement())
  userId    Int  @unique
  user      User   @relation(fields: [userId], references: [id])
  balance   Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}